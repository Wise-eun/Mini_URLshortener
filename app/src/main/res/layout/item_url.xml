<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"

    android:layout_constraintEnd_toEndOf="parent"
    android:layout_constraintStart_toStartOf="parent"
    android:layout_constraintTop_toTopOf="parent"
    android:backgroundTint="#DFDFDF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
    <TextView
        android:id="@+id/text_originURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_constraintEnd_toBottiomOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:text="https://github.com/Wise-eun/"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/text_shortenURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintBottom_toTopOf="@+id/text_originURL"
        android:layout_constraintBottom_toBottiomOf="parent"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"

        android:textColor="#1846A4"
        android:text="http://localhost/wm51df"
        android:textSize="12dp"/>
      </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>